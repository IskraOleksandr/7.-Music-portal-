@model IEnumerable<Музыкальный_портал__Music_portal_.Models.User>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
} 

<br>
<div>
    <div class="dv1 wh">
        <h1 class="h1_n">Список пользователей</h1>
        <div class="div_l1 div_l2n1 ">
            <div class="div_l2 div_l2n wh">
                <br />
                <div class="div_l3n wh">
                    <div class="div_l4 wh">
                        <table class="table1">
                            <thead>
                                <tr >
                                    <th class="th2">
                                        @Html.DisplayNameFor(model => model.FirstName)
                                    </th>
                                    <th class="th2">
                                        @Html.DisplayNameFor(model => model.LastName)
                                    </th>
                                    <th class="th2">
                                        @Html.DisplayNameFor(model => model.Login)
                                    </th>
                                    <th class="th2">
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    <th class="th2">
                                        @Html.DisplayNameFor(model => model.Level)
                                    </th>
                                    <th class="th2"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="tr1">
                                        <td class="td2">
                                            @Html.DisplayFor(modelItem => item.FirstName)
                                        </td>
                                        <td class="td2">
                                            @Html.DisplayFor(modelItem => item.LastName)
                                        </td>
                                        <td class="td2">
                                            @Html.DisplayFor(modelItem => item.Login)
                                        </td>
                                        <td class="td2">
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td class="td2">
                                            @Html.DisplayFor(modelItem => item.Level)
                                        </td>
                                        <td class="td2">
                                            <a class="a_bt2" asp-action="Edit" asp-route-id="@item.Id" id="EditUserDialog" data_dialog_title="Edit model">Редактировать</a>
                                            <a class="a_bt2" asp-action="Delete" asp-route-id="@item.Id" id="DeleteUserDialog" data_dialog_title="Delete model">Удалить</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <br /> <br />
            </div> 
        </div>
    </div>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {

            $("#DeleteUserDialog").on("click", function (e) {
                e.preventDefault();

                $("<div></div>")
                    .addClass("dialog")
                    .appendTo("body")
                    .dialog({
                        title: "Удаление пользователя" /* $(this).attr("data-dialog-title") */,
                        close: function () { $(this).remove() },
                        dialogClass: 'myTitleClass',
                        width: "420px",
                        resizable: false,
                        modal: true
                    })
                    .load(this.href);
            });


            $("#EditUserDialog").on("click", function (e) {
                e.preventDefault();

                $("<div id='dialogContent'></div>")
                    .addClass("dialog")
                    .appendTo("body")
                    .load(this.href)
                    .dialog({
                        title: "Редактирование пользователя",
                        close: function () { $(this).remove() },
                        dialogClass: 'myTitleClass1v',
                        width: "485px",
                        resizable: false,
                        modal: true,
                        buttons: [{
                            class: "input_subm inp_sub",
                            text: "Сохранить",
                            click: function () {
                                $.ajax({
                                    url: "@Url.Action("Edit", "User")",
                                    type: "POST",
                                    data: $('form').serialize(),
                                    datatype: "json",
                                    success: function (result) {
                                        $("#dialogContent").html(result);
                                    }
                                });
                            }
                        }]
                    });
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}