@model Музыкальный_портал__Music_portal_.Models.Login_Model

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br>
<div>
    <div class="dv1">

        <h1 class="h1_n">Вход</h1>

        <div class="div_l1 div_l2n1">
            <form asp-action="Login">
                <div class="div_l2 div_l2n" style="height: max-content">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div> 
                    <br /> 
                    <div class="div_l3n">
                        <div class="div_l4">
                            <label asp-for="Login" class="label_l1"></label>
                            <input asp-for="Login" class="input1 " type="text" />
                        </div>
                        <span asp-validation-for="Login" class="span_error"></span>
                    </div>
 
                    <div class="div_l3n">
                        <div class="div_l4">
                            <label asp-for="Password" class="label_l1"></label>
                            <input asp-for="Password" class="input1 " type="password" />
                        </div>
                        <span asp-validation-for="Password" class="span_error"></span>
                    </div>
                     
                    <div class="div_subm">
                        <input class="input_subm" type="submit" value="Войти" />
                    </div>

                    <a class="a_navigation" asp-action="Index" asp-controller="Music">На главную страницу</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}